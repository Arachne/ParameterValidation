{
    "name": "arachne/parameter-validation",
    "description": "Parameter validation for Arachne/Verifier.",
    "type": "library",
    "keywords": [ "nette", "arachne", "security" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6.0|^7.0.0",
        "arachne/verifier": "^0.9.0@alpha",
        "kdyby/validator": "^0.4.0",
        "nette/di": "^2.4.0",
        "symfony/property-access": "^3.2.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "codeception/codeception": "^2.3.2",
        "eloquent/phony": "^1.0.0",
        "eloquent/phony-phpunit": "^1.0.0|^2.0.0",
        "kdyby/translation": "^2.2.0",
        "symfony/expression-language": "^3.2.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\ParameterValidation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src",
            "Tests\\Integration\\": "tests/integration/src"
        },
        "files": [
            "vendor/codeception/codeception/shim.php"
        ]
    },
    "scripts": {
        "tools": "sh composer-tools.sh",
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5-dev"
        }
    }
}
